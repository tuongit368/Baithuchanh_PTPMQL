<form  asp-action="Index" class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin w3-animate-left ">
<h2 class="w3-center">Personal Information</h2>
 
<div class="w3-row w3-section">
  <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-id-card"></i></div>
    <div class="w3-rest">
      @* <input class="w3-input w3-border" name="first" type="text" placeholder="First Name"> *@
      <input name="PersonId" class="w3-round-large w3-input w3-border" type="text" required placeholder="Enter PersonId...">
    </div>
</div>

<div class="w3-row w3-section">
  <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
    <div class="w3-rest">
      @* <input class="w3-input w3-border" name="last" type="text" placeholder="Last Name"> *@
      <input name="Fullname" class="w3-round-large w3-input w3-border " type="text"required placeholder="Enter Fullname...">
    </div>
</div>

<div class="w3-row w3-section">
  <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-home"></i></div>
    <div class="w3-rest">
      @* <input class="w3-input w3-border" name="email" type="text" placeholder="Email"> *@
      <input name="Address" class="w3-round-large w3-input w3-border" type="text"required placeholder="Enter Address...">
    </div>
</div>


<button class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding">Send</button>

</form>

<div class="w3-panel w3-pale-blue w3-card-4 w3-animate-left w3-container w3-card-4 w3-margin">
  <h3>Dữ liệu:</h3>
  <hr>
  <p>@ViewBag.infoPerson</p>
</div>